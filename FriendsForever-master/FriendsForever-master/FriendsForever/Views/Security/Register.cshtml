@model FriendsForever.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<body class="bodyRegister">
    <div style="margin-left:700px">
    <div>
        <img src="~/Content/images/Friends-logo.png" alt="FF logo"/>
    </div>
    @if(Model != null && !string.IsNullOrWhiteSpace(Model.Message))
            {
               <p style="font-weight:bold;">@Model.Message</p>
            }
    <div>
        @Html.ValidationSummary()
    </div>
    <fieldset style="width:500px">
        <legend>Register form</legend>
        @using (Html.BeginForm())
        {
            <table>
                <tr>
                    <td>@Html.LabelFor(c => c.FristName, "FristName:")</td>
                    <td>@Html.TextBoxFor(c => c.FristName)</td>

                </tr>
                <tr>
                    <td>@Html.LabelFor(c => c.LastName, "LastName:")</td>
                    <td>@Html.TextBoxFor(c => c.LastName)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(c => c.Email, "Email:")</td>
                    <td>@Html.TextBoxFor(c => c.Email)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(c => c.Password, "Password:")</td>
                    <td>@Html.TextBoxFor(c => c.Password)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(c => c.ConfirmPassword, "ConfirmPassword:")</td>
                    <td>@Html.TextBoxFor(c => c.ConfirmPassword)</td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input type="submit" value="Register" />
                        <input type="reset" value="Reset" />
                    </td>
                </tr>
            </table>
        }
     </fieldset>
    <div style="margin-left:200px">
        @Html.ActionLink("Redirect to Login", "Logon")
    </div>
  </div>
</body>
